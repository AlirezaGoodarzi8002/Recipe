<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/image_recipe"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:alpha="0.25"
            android:backgroundTint="@color/on_background"
            app:cardCornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/text_recipe"
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:alpha="0.25"
            android:backgroundTint="@color/on_background"
            app:cardCornerRadius="16dp"
            app:layout_constraintBottom_toTopOf="@id/text_description"
            app:layout_constraintStart_toEndOf="@id/image_recipe"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/text_description"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:alpha="0.25"
            android:backgroundTint="@color/on_background"
            app:cardCornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="@id/image_recipe"
            app:layout_constraintStart_toStartOf="@id/text_recipe"
            app:layout_constraintTop_toBottomOf="@id/text_recipe" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>